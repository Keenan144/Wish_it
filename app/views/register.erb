<div class="register_container">

<% if @new_user != nil %>
  <p>Invalid Handle!</p>
<% end %>

  <form id="register_form" action='/register' method="post" align="center">
    Choose your User Name: <input type="text" name="handle" placeholder="User Name">
    <br><br>
    Enter Your Email: <input type="text" name="email" placeholder="wish@herokuwebapps.com" size="29px">
    <br><br>
    Pick a good Password: <input type="password" name="password" placeholder="Password" size="23.5px">
    <br><br>
    What's your Name: <input type="text" name="name" placeholder="Full name">
    <br><br>
    What's your Gender: <input type="text" name="gender" placeholder="optional">
    <br><br>
    What's your Birthday: <input type="text" name="age" placeholder="dd/mm/yyyy">
    <br><br>
    <input type="submit" value="Register!">
  </form>

</div>